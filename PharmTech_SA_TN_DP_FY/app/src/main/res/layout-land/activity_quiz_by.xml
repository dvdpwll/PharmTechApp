<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:scrollbars="vertical"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

        <LinearLayout android:orientation="vertical"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:gravity="top"
                      android:background="@drawable/resultbn">

        <TextView
            android:text="@string/choice_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:textStyle="bold|italic"
            android:textSize="24dp"
            android:id="@+id/textView2"/>

        <LinearLayout
            android:layout_width="453dp"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <Spinner android:spinnerMode="dialog"
                     android:layout_width="wrap_content"
                     android:layout_height="50dp"
                     android:id="@+id/study_by_spinner"
                     android:entries="@array/study_by_list"
                     android:prompt="@string/quiz_item"
                >
            </Spinner>

            <Spinner
                android:spinnerMode="dialog"
                android:id="@+id/quiz_by_spinner"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:entries="@array/quiz_by_type"
                android:prompt="@string/quiz_type"
                >

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">


            <Button
                android:id="@+id/study_by_btn"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:text="Press here after selection"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btnpurple"/>


        </LinearLayout>

    </LinearLayout>
</ScrollView>