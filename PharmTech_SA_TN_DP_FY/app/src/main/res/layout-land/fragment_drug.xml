<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:scrollbars="vertical"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:weightSum="1"
                  android:background="@drawable/resultbn">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/generic_tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="20sp"
            android:text="@string/generic_name"/>

        <TextView
            android:id="@+id/brand_tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="20sp"
            android:text="@string/brand_name"/>

        <TextView
            android:id="@+id/purpose_tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="20sp"
            android:text="@string/purpose"/>

        <TextView
            android:id="@+id/schedule_tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="20sp"
            android:text="@string/dea_sch"/>

        <TextView
            android:id="@+id/special_tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="20sp"
            android:text="@string/special"/>

        <TextView
            android:id="@+id/category_tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="20sp"
            android:text="@string/category"/>

        <TextView
            android:id="@+id/study_topic_tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="20sp"
            android:text="@string/study_topic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:text="@string/notes_text"/>

        <EditText
            android:id="@+id/et_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:hint="@string/et_notes_here"
            />

        <TextView
            android:id="@+id/text_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:text="@string/play_sound"/>

        <TableLayout
            android:layout_width="132dp"
            android:layout_height="87dp"
            android:layout_gravity="center"
            android:weightSum="1"
            ><![CDATA[
        />
        ]]>

            <ImageButton
            android:layout_width="52dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:id="@+id/imageView_sound"
            android:background="@drawable/speaker"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:adjustViewBounds="false"
            />
        </TableLayout>


        <!--
        <Button
            android:id="@+id/btn_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_notes_btn_text"
            />
            -->

    </LinearLayout>
</ScrollView>