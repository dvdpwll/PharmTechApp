<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:weightSum="1"
              android:background="@drawable/resultbn">

    <TextView
        android:text="@string/choice_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:textStyle="bold|italic"
        android:textSize="24dp"
        android:id="@+id/textView2"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="1"
        android:layout_weight="0.07">

        <Spinner android:spinnerMode="dialog"
                 android:layout_width="wrap_content"
                 android:layout_height="50dp"
                 android:layout_weight="1"
                 android:id="@+id/study_by_spinner"
                 android:entries="@array/study_by_list"
                 android:prompt="@string/quiz_item"
            >
        </Spinner>


        <Spinner
            android:spinnerMode="dialog"
            android:id="@+id/quiz_by_spinner"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:entries="@array/quiz_by_type"
            android:prompt="@string/quiz_type"
            >

        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">


        <Button
            android:id="@+id/study_by_btn"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:text="Press here after selection"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btnpurple"
            android:layout_marginTop="125dp"

            />


    </LinearLayout>

</LinearLayout>