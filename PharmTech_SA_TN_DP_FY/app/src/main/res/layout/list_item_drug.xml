<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >


    <TextView
        android:id="@+id/list_item_drug_generic_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="4dp"
        android:text="@string/drug_title"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
       />

    <TextView
        android:id="@+id/list_item_drug_brand_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_drug_generic_text_view"
        android:textStyle="italic"
        android:padding="4dp"
        android:text="@string/drug_brand"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"

        />

</RelativeLayout>
